{
	"name": "beancount-lsp-server",
	"version": "0.0.1",
	"description": "Language server for Beancount files with customizable tree-sitter WASM file path",
	"main": "dist/node/server.js",
	"browser": "dist/browser/server.js",
	"scripts": {
		"build": "tsup && node scripts/prepare-client-assets.js",
		"lint": "eslint --cache .",
		"watch": "tsup --watch",
		"typecheck": "tsc --noEmit true",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"prepublishOnly": "npm run build"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@bean-lsp/shared": "workspace:*",
		"@seald-io/nedb": "^4.0.4",
		"big.js": "^6.2.2",
		"date-fns": "^3.3.1",
		"execa": "^9.5.2",
		"fast-glob": "^3.3.2",
		"micromatch": "^4.0.5",
		"mnemonist": "^0.39.8",
		"nominal-types": "^0.2.0",
		"pinyin-pro": "^3.26.0",
		"ts-pattern": "^5.0.6",
		"tsyringe": "^4.8.0",
		"vscode-languageserver": "^9.0.1",
		"vscode-languageserver-textdocument": "^1.0.11",
		"vscode-uri": "^3.0.8",
		"web-tree-sitter": "^0.20.8"
	},
	"devDependencies": {
		"@swc/core": "^1.11.18",
		"@types/big.js": "^6.2.2",
		"@types/micromatch": "^4.0.6",
		"esbuild-plugins-node-modules-polyfill": "^1.7.0",
		"eslint-config-custom": "workspace:^",
		"type-fest": "^4.39.1",
		"vitest": "^3.1.1"
	}
