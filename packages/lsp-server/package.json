{
	"name": "beancount-lsp-server",
	"version": "0.0.5",
	"description": "Language server for Beancount files with customizable tree-sitter WASM file path",
	"main": "dist/node/server.js",
	"browser": "dist/browser/server.js",
	"bin": {
		"beancount-lsp-server": "./dist/node/server.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "cross-env LSP_CLIENT_TYPE=vscode tsup && node scripts/prepare-client-assets.js",
		"build:npm": "tsup",
		"watch": "tsup --watch",
		"typecheck": "tsc --noEmit true",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"prepublishOnly": "npm run build:npm"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"publishConfig": {
		"access": "public",
		"dependencies": {}
	},
	"devDependencies": {
		"@bean-lsp/shared": "workspace:*",
		"@bean-lsp/storage": "workspace:*",
		"@swc/core": "^1.15.3",
		"@types/big.js": "^6.2.2",
		"@types/micromatch": "^4.0.10",
		"big.js": "^7.0.1",
		"date-fns": "^4.1.0",
		"esbuild-plugins-node-modules-polyfill": "^1.7.1",
		"execa": "^9.6.1",
		"fast-glob": "^3.3.2",
		"micromatch": "^4.0.5",
		"mnemonist": "^0.39.8",
		"pinyin-pro": "^3.27.0",
		"ts-pattern": "^5.9.0",
		"type-fest": "^5.3.1",
		"vitest": "^4.0.15",
		"vscode-languageserver": "^9.0.1",
		"vscode-languageserver-textdocument": "^1.0.11",
		"vscode-uri": "^3.0.8",
		"web-tree-sitter": "^0.20.8"
	},
	"dependencies": {
		"@remusao/smaz": "^2.2.0",
		"async-call-rpc": "^6.4.2",
		"beancount-wasm": "^0.1.0",
		"scheduler-polyfill": "^1.3.0"
	}
}
