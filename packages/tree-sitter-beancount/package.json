{
  "name": "tree-sitter-beancount",
  "version": "1.0.0",
  "private": true,
  "description": "tree sitter for beancount",
  "main": "bindings/node",
  "scripts": {
    "generate": "wireit",
    "build:wasm": "wireit",
    "build:node": "wireit",
    "build:playground": "wireit",
    "build": "wireit",
    "playground": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "generate": {
      "command": "tree-sitter generate",
      "files": [
        "./grammar.js"
      ]
    },
    "build-wasm": {
      "command": "tree-sitter build-wasm",
      "dependencies": [
        "generate"
      ]
    },
    "configure": {
      "command": "node-gyp configure",
      "dependencies": [
        "generate"
      ]
    },
    "build-node": {
      "command": "node-gyp build",
      "dependencies": [
        "configure"
      ]
    },
    "build": {
      "dependencies": [
        "test",
        "build-node",
        "build-wasm"
      ]
    },
    "test": {
      "command": "tree-sitter test",
      "files": [
        "./test/**/*.txt"
      ],
      "output": [],
      "dependencies": [
        "generate"
      ]
    },
    "playground": {
      "command": "tree-sitter playground",
      "dependencies": [
        "build-wasm"
      ],
      "files": [
        "./tree-sitter-beancount.wasm",
        "./grammar.js"
      ],
      "outputs": [],
      "service": {
        "readyWhen": {
          "lineMatches": "Started playground on .+\\d+"
        }
      }
    }
  },
  "keywords": [],
  "author": "fengkx",
  "license": "MIT",
  "dependencies": {
    "nan": "^2.17.0"
  },
  "devDependencies": {
    "node-gyp": "^9.3.1"
  }
}
