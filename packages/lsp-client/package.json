{
  "name": "beancount-lsp-client",
  "displayName": "beancount language service",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:beancount"
  ],
  "main": "./dist/main.js",
  "contributes": {
    "languages": [
      {
        "id": "beancount",
        "extensions": [
          ".bean",
          ".beancount"
        ]
      }
    ],
    "commands": [
      {
        "command": "beancount-lsp.helloWorld",
        "title": "Hello World"
      }
    ],
    "configurationDefaults": {
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "date": "#33a3ed",
          "account": "#df5ed9",
          "currency": "#f5a23d"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "copy:asset": "cp src/queries/*.scm out/queries",
    "esbuild:base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node --target=es2022",
    "esbuild": "npm run esbuild:base -- --sourcemap",
    "esbuild-watch": "npm run esbuild:base -- --sourcemap --watch",
    "test-compile": "tsc -p ./ && npm run copy:asset",
    "watch": "npm run copy:asset &&  tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.18.11",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "tree-sitter": "^0.20.5",
    "tree-sitter-beancount": "workspace:^",
    "tsup": "^7.1.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "web-tree-sitter": "^0.20.8"
  }
}
