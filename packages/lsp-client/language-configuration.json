{
	"comments": {
		"lineComment": ";"
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		{ "open": "{", "close": "}" },
		{ "open": "[", "close": "]" },
		{ "open": "(", "close": ")" }
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""]
	],
	//   "folding": {
	//     "markers": {
	//       "start": "^[0-9]{4}[-/][0-9]{2}[-/][0-9]{2}\\s+\\*",
	//       "end": "^(?=[0-9]{4}[-/][0-9]{2}[-/][0-9]{2})"
	//     }
	//   },
	"wordPattern": "(-?\\d*\\.?\\d+ *)|(([A-Z][A-Za-z0-9\\-]*)(:[A-Z][A-Za-z0-9\\-]*)+)|([A-Z][A-Z0-9\\'\\._\\-]{0,22}[A-Z0-9]*)|(#[\\w\\-]+)|(\\^[\\w\\-]+)|([A-Z][a-z][\\w\\-]+:)|([a-z]+)",
	"onEnterRules": [
		{
			"beforeText": "^\\d{4}[\\-]\\d{2}[\\-]\\d{2}\\s+(?:\\*|\\!|txn).*$",
			"action": { "indent": "indent" }
		},
		{
			"beforeText": "^\\s+[A-Z][A-Za-z0-9\\-]*(?::[A-Z][A-Za-z0-9\\-]*)+.*$",
			"action": { "indent": "none" }
		}
	]
}
