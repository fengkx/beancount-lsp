{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"outputs": ["out/**", "dist/**", "server/**"],
			"dependsOn": ["^build"]
		},
		"build:npm": {
			"outputs": ["out/**", "dist/**", "server/**"],
			"dependsOn": ["^build", "^build:npm"]
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"],
			"cache": false,
			"persistent": true
		},
		"watch": {
			"outputs": ["out/**", "dist/**"],
			"dependsOn": ["tree-sitter-beancount#build"],
			"cache": false,
			"persistent": true
		},
		"check": {
			"outputs": [],
			"dependsOn": ["typecheck", "lint", "format:check"]
		},
		"format": {
			"outputs": [],
			"dependsOn": ["format:fix"]
		},
		"typecheck": {},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"format:check": {},
		"format:fix": {},
		"@fengkx/tree-sitter-beancount#build": {
			"outputs": [
				"bindings/**",
				"src/**",
				"tree-sitter-beancount.wasm",
				"Cargo*",
				"binding.gyp"
			]
		},
		"beancount-lsp-client#vsix": {
			"dependsOn": ["beancount-lsp-client#build"],
			"outputs": ["$TURBO_ROOT$/packages/lsp-client/*.vsix"]
		},
		"@fengkx/beancount-playground#build": {
			"dependsOn": ["^build", "beancount-lsp-client#vsix"],
			"inputs": ["$TURBO_DEFAULT$", "$TURBO_ROOT$/scripts/prepare-browser-demo-vsix.mjs", "$TURBO_ROOT$/packages/lsp-client/*.vsix"],
			"outputs": ["dist/**"]
		}
	},
	"globalDependencies": [".env"]
}
