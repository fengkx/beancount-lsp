{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["out/**", "dist/**"],
      "dependsOn": ["^build"]
    },
    "watch": {
      "outputs": ["out/**", "dist/**"],
      "dependsOn": ["tree-sitter-beancount#build"],
      "cache": false,
      "persistent": true
    },
    "check": {
      "outputs": [],
      "dependsOn": ["typecheck", "lint"]
    },
    "typecheck": {},
    "lint": {},
    "tree-sitter-beancount#build": {
      "outputs": [
        "bindings/**",
        "src/**",
        "tree-sitter-beancount.wasm",
        "Cargo*",
        "binding.gyp"
      ]
    }
  },
  "globalDependencies": [".env"]
}
